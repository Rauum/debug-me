<form method="post">
    {{ form_start(form) }}
    {{ form_row(form.name, {
        'label_attr': {'class': 'font-bold mb-2'},
        'attr': {'class': 'border rounded p-2 mb-4 w-full'}}) }}
    {{ form_row(form.tag, {
        'label_attr': {'class': 'font-bold mb-2'},
        'attr': {'class': ''}}) }}
    <button type="submit">Rechercher</button>
    {{ form_end(form) }}
</form>

