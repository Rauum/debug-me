{% extends '/admin/base.html.twig' %}

{% block title %}Tickets{% endblock %}

{% block body %}
    <div class="flex">
        <div class="lg:w-1/3 flex flex-col gap-4 items-start opacity-40">
            {% include 'components/text/_title_index.html.twig' with {'text': 'Ticket'} %}
            {% include 'admin/ticket/_form_disabled.html.twig' with {'text_btn': "Sauvegarder les changements"} %}
        </div>
        <div class="lg:w-2/3 flex flex-col gap-4 items-start px-8">
            {% include 'components/text/_title_index.html.twig' with {'text': 'Modification des commentaires'} %}

            {% for message in app.flashes('success') %}
                {% include 'components/alert/_success.html.twig' %}
            {% endfor %}

            {% if comments is empty %}
                <p>Aucun commentaire pour le moment</p>
            {% endif %}

            {% for comment in comments %}
                {% include 'components/comment/_comment.html.twig' with {'comment': comment }  %}
            {% endfor %}
        </div>
    </div>
    {% endblock %}

