{% extends '/admin/base.html.twig' %}

{% block title %}Tickets{% endblock %}

{% block body %}
    {% include 'admin/assets/text/title_index.html.twig' with {'text': 'Tickets'} %}
    <p class="mb-2">C’est ici que vous pouvez ajouter, modifier ou supprimer des tickets.</p>
    {% include 'admin/assets/button/btn_red.html.twig' with {'tag': 'a', 'text': 'Ajouter un nouveau ticket', 'route': 'app_admin_ticket_new'} %}

    {% for message in app.flashes('success') %}
        <div class="my-4">
            {% include 'admin/assets/alert/success.html.twig' %}
        </div>
    {% endfor %}

    {% include 'admin/assets/table/table.html.twig' with {
        'titles': ['Titre','Auteur','Tags','Date de création','Commentaires'],
        'datas' : datas,
        'class' : ['','','','','font-bungee w-fit text-white bg-tertiary p-4 rounded-xl'],
        'route_edit' : 'app_admin_ticket_edit'
    }
    %}
{% endblock %}

