{% if route_parameter is defined %}
    {% set parameter = {} %}
    {% for data in route_parameter %}
        {% set parameter = parameter|merge({(data.name):data.value}) %}
    {% endfor %}
{% endif %}

{% if tag == "a" %}
    <p class="font-bungee w-fit text-white bg-dark hover:bg-graylight p-4 rounded-xl {{ tiny is defined ? 'text-xs px-4 py-2' : 'text-base p-4' }}">
        <a class="flex"
           href="{% if route_parameter is defined %}{{ path(route, parameter) }}{% else %}{{ path(route) }}{% endif %}">{{ text|raw }}</a>
    </p>
{% elseif tag == "button" %}
    <button class="font-bungee w-fit text-white bg-dark hover:bg-graylight p-4 rounded-xl me-2 {{ tiny is defined ? 'text-xs px-4 py-2' : 'text-base p-4' }}" type="submit" class="btn">
        {{ text|raw }}
    </button>
{% endif %}